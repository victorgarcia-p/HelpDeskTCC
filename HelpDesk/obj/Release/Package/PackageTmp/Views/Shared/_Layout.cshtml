<body>
    <input hidden id="nomeUsuario" value="@User.Identity.Name.Split(';')[0]" />
    <header>
        <div class="px-3 py-2 bg-menu text-white">
            <div class="container">
                <div class="d-flex flex-lg-wrap align-items-center justify-content-center justify-content-lg-start">
                    <a href="/" class="d-flex align-items-center my-2 my-lg-0 me-lg-auto text-white text-decoration-none" >
                        <img src="~/Content/Imagens/logo_branco.png" class="logo-home" alt="">
                    </a>
                    <ul class="nav col-12 col-lg-auto my-2 justify-content-center my-md-0 text-small">
                        <li>
                            <a href="/" class="nav-link text-white">
                                <svg class="bi d-block mx-auto mb-1" width="24" height="24"><use xlink:href="#chamados" /></svg>
                                Chamados
                            </a>
                        </li>
                        <li>
                            <a href="/Plantao" class="nav-link text-white">
                                <svg class="bi d-block mx-auto mb-1" width="24" height="24"><use xlink:href="#escala" /></svg>
                                Plantao
                            </a>
                        </li>
                        <li id="Gerenciar">
                            <a href="#" class="nav-link text-white" data-bs-toggle="dropdown" aria-expanded="false">
                                <svg class="bi d-block mx-auto mb-1" width="24" height="24"><use xlink:href="#gear" /></svg>
                                Gerenciar
                            </a>
                            <ul class="dropdown-menu text-small shadow" aria-labelledby="dropdownUser2">
                                <li id="Usuarios"><a class="dropdown-item" href="/Gerenciar/Usuarios">Usuários</a></li>
                                <li id="Setores"><a class="dropdown-item" href="/Gerenciar/Setores">Setores</a></li>
                                <li id="Categorias"><a class="dropdown-item" href="/Gerenciar/Categorias">Categorias</a></li>
                                <li id="Dashboard"><a class="dropdown-item" href="/Gerenciar/Dashboard">Dashboard</a></li>
                            </ul>
                        </li>
                        <li id="Usuario">

                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </header>
    <div class="container body-content">
        @RenderBody()
    </div>
    <div class="container justify-content-center">
        <hr />
        <div style="text-align:center;"><p>&copy; @DateTime.Now.Year - PUC Minas</p></div>
    </div>

