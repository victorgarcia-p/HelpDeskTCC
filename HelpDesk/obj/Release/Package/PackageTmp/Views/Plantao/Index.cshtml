@{
    ViewBag.Title = "Plantoes";
    if (@User.Identity.Name.Split(';')[1] == "USUARIO")
    {
        Layout = "../Shared/_Layout2.cshtml";
    }
    else
    {
        Layout = "../Shared/_Layout.cshtml";
    }
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/jquery-3.6.0.min.js"></script>
<script src="~/Scripts/app-plantao.js"></script>
<link href="~/Content/Site.css" rel="stylesheet" />

<link href='~/Content/CSS/fullcalendar.css' rel='stylesheet' />
<script src='~/Scripts/fullcalendar.js'></script>

<input hidden id="usuarioLogado" value="@User.Identity.Name.Split(';')[0]" />

<div style="padding-top: 2%;">
    <div class="row justify-content-center">
        <div class="col-sm-12 col-md-3 col-lg-3 row" id="configTecnicos" style="margin-top: 7%;"></div>
        <div class="col-sm-12 col-md-8 col-lg-8" id='calendar'></div>
    </div>
    
</div>

<div class="modal" tabindex="-1" id="modalCadastro">
    <div class="modal-dialog">
        <div class="modal-content row g-3">
            <div class="modal-header">
                <h4 class="modal-title" id="lblFolga"></h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <label id="idFolga" hidden></label>
                <div class="form-group row g-3">
                    <div class="col-6" style="display:inline-block;">
                        <label>Data Início</label>
                        <input type="date" class="form-control" placeholder="Chapa" id="dataIni" />
                    </div>
                    <div class="col-6" style="display:inline-block;">
                        <label>Data Fim</label>
                        <input type="date" class="form-control" placeholder="Chapa" id="dataFim" />
                    </div>
                </div>
                <div class="form-group col-12">
                    <label id="lblNome">Nome</label>
                    <select class="form-control" name="nome" id="ddFuncionario">
                        <option value="0">Selecione o Funcionário:</option>
                    </select>
                    <label class="form-control" id="lblFuncionario"></label>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
                <button style="display: none;" type="button" class="btn btn-primary" id="btnSalvar">Salvar</button>
                <button style="display: none;" type="button" class="btn btn-danger" id="btnExcluir">Excluir</button>
                <button style="display: none;" type="button" class="btn btn-primary" id="btnAlterar">Alterar</button>
            </div>
        </div>
    </div>
</div>