@{
    ViewBag.Title = "Perfil";
    if (@User.Identity.Name.Split(';')[1] == "USUARIO")
    {
        Layout = "../Shared/_Layout2.cshtml";
    }
    else
    {
        Layout = "../Shared/_Layout.cshtml";
    }
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/jquery-3.6.0.min.js"></script>
<script src="~/Scripts/app-perfil.js"></script>

<body>
    <input hidden id="RedefinirSenha" value="@User.Identity.Name.Split(';')[2]" />
    <input hidden id="Login" value="@User.Identity.Name.Split(';')[0]" />
    <div class="row container justify-content-center" style="padding-bottom: 2rem;">
        <div class="col-md-8 col-lg-9">
            <div class="row gy-3" style="padding-top:2rem;">
                <div class="col-sm-12">
                    <label for="txtNome" class="form-label">Nome</label>
                    <label style="height:40px;" class="form-control" id="txtNome"></label>
                </div>

                <div class="col-sm-12">
                    <label for="txtLogin" class="form-label">Login</label>
                    <label style="height:40px;" class="form-control" id="txtLogin"></label>
                </div>

                <div class="col-sm-12">
                    <label for="txtEmail" class="form-label">E-Mail</label>
                    <label style="height:40px;" class="form-control" id="txtEmail"></label>
                </div>

                <div class="col-sm-6 col-lg-6">
                    <label for="txtSetor" class="form-label">Setor</label>
                    <label style="height:40px;" class="form-control" id="txtSetor"></label>
                </div>

                <div class="col-sm-6 col-lg-6">
                    <label for="txtPerfil" class="form-label">Perfil</label>
                    <label style="height:40px;" class="form-control" id="txtPerfil"></label>
                </div>

                <div style="margin:1rem;"></div>
                <div class="col-sm-3"></div>
                <div class="col-sm-3">
                    <button class="form-control btn-facebook" id="btnEditar">Editar informações</button>
                </div>
                <div class="col-sm-3">
                    <button class="form-control btn-facebook" id="btnRedefinir">Redefinir Senha</button>
                </div>
                <div class="col-sm-3"></div>
            </div>
        </div>
    </div>

    <div class="modal fade" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true" id="modalRedefinir">
        <div class="modal-dialog modal-md">
            <div class="modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Redefina sua senha</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>

                    <div class="row justify-content-center">
                        <div class="col-md-10" style="margin-bottom: 10%; margin-top: 7%;">
                            <label for="txtSenha" class="form-label">Digite a nova senha</label>
                            <input type="password" class="form-control" id="txtSenha" placeholder="" required="">
                        </div>
                    </div>
                    <div class="modal-footer justify-content-center container">
                        <button style="width: 40%" class="btn btn-facebook form-control" id="btnResetar">Alterar senha</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true" id="modalEditar">
        <div class="modal-dialog modal-md">
            <div class="modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 id="titleAlterar" class="modal-title">Editar Informações</h4>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="row" style="padding-bottom: 2rem;">
                        <div class="col-md-12 col-sm-12">
                            <form action="api/values" method="post" novalidate="" id="formAlterar" style="padding-top: 1.5rem;">
                                <div class="row justify-content-center">
                                    <div class="col-sm-10">
                                        <label for="txtNome" class="form-label">Nome</label>
                                        <input type="text" class="form-control" id="editNome" placeholder="" required="">
                                    </div>

                                    <div class="col-sm-10">
                                        <label for="txtEmail" class="form-label">E-Mail</label>
                                        <input type="email" class="form-control" id="editEmail" placeholder="exemplo@exemplo.com" required>
                                    </div>

                                    <div class="col-sm-10">
                                        <label for="txtSetor" class="form-label">Setor</label>
                                        <select class="form-control" id="ddSetor" placeholder="Setor" required>
                                        </select>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="modal-footer justify-content-center">
                        <div>
                            <button form="formAlterar" class="btn btn-facebook form-control" id="btnAlterar" type="submit">Alterar</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>