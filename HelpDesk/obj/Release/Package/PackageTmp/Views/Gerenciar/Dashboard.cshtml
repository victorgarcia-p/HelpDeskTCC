
@{
    ViewBag.Title = "Dashboard";
    if (@User.Identity.Name.Split(';')[1] == "USUARIO")
    {
        Layout = "../Shared/_Layout2.cshtml";
    }
    else
    {
        Layout = "../Shared/_Layout.cshtml";
    }
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/jquery-3.6.0.min.js"></script>
<script src="~/Scripts/app-dashboard.js"></script>
<link href="~/Content/Site.css" rel="stylesheet" />
<link href="~/Content/CSS/dashboard.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script src="https://d3js.org/d3.v6.min.js"></script>

<input hidden id="perfilUsuario" value="@User.Identity.Name.Split(';')[1]" />
<input hidden id="idUsuario" value="@User.Identity.Name.Split(';')[0]" />

<div class="row justify-content-center" style="margin-top:2rem;">
    <div class="col-lg-3 col-md-4 col-sm-5">
        <input type="date" class="form-control" id="dataIni" />
    </div>
    <div class="col-lg-3 col-md-4 col-sm-5" style="margin-bottom:1rem;">
        <input type="date" class="form-control" id="dataFim"/>
    </div>
</div>
<div class="row justify-content-center" style="margin-bottom: 1rem;">
    <button class="bi bi-search btn-facebook form-control" style=" max-width: 80px;" id="btnFiltrar"></button>
</div>
<div class="row justify-content-center">
    <div class="col-10">
        <canvas id="myChart"></canvas>
    </div>
    <div class="col-5">
        <canvas id="myChart2"></canvas>
    </div>
    <div class="col-5">
        <canvas id="myChart3"></canvas>
    </div>
</div>

